<h3>Service</h3>
<%= form_for([@invoice, @invoice.services.build]) do |f| %>
  <p>
    <%= f.label :date %><br />
    <%= f.date_field :date %>
  </p>
   <p>
    <%= f.label :service %><br />
    <%= f.text_area :service %>
  </p>
  <p>
    <%= f.label :rate %><br />
    <%= f.text_field :rate %>
  </p>

  <p>
    <%= f.submit :class => "btn" %>
  </p>
<% end %>